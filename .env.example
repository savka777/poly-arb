# Vertex AI (Google Cloud) — for Claude access
GOOGLE_CLOUD_PROJECT=gen-lang-client-0494134627
VERTEX_REGION=us-east5

# External APIs
VALYU_API_KEY=

# Braintrust observability (optional — LLM call tracing)
BRAINTRUST_API_KEY=

# Polling + scanning
NEXT_PUBLIC_POLL_INTERVAL_MS=15000
CYCLE_INTERVAL_MS=60000

# Signal threshold (lower = more signals, higher = only strong alpha)
EV_THRESHOLD=0.02

# Scanner tuning (legacy — used by orchestrator for market fetching)
SCANNER_CONCURRENCY=5
SCANNER_MARKETS_PER_CYCLE=50
SCANNER_SIGNAL_TTL_MS=600000

# Mock data (set to "true" for demo/testing without live APIs)
USE_MOCK_DATA=false

# Market filters — controls which markets the scanner targets
MARKET_MIN_LIQUIDITY=0
MARKET_MIN_VOLUME=0
MARKET_MIN_PROBABILITY=0.05
MARKET_MAX_PROBABILITY=0.95
MARKET_EXCLUDE_TAGS=Sports,NBA,NFL,Soccer,Basketball,Hockey,NHL,Tennis,Baseball,MLB,Cricket,MMA,UFC,Boxing,Esports,F1,Golf,Games

# Strategies — comma-separated list of enabled strategies
ENABLED_STRATEGIES=ev

# News monitor — polls for breaking news and matches to active markets
NEWS_MONITOR_INTERVAL_MS=30000
NEWS_MONITOR_QUERIES=breaking news today,latest world events,financial markets news
NEWS_MONITOR_MAX_ARTICLES_PER_POLL=10

# EV calculation weights (logit-space feature combination)
# W_NEWS: weight for LLM news feature (0.4 = trust market more than LLM)
# W_TIME: weight for time-decay feature
W_NEWS=0.4
W_TIME=0.3

# Orchestrator — change-detection-based analysis scheduling
ORCHESTRATOR_WORKERS=3
ORCHESTRATOR_MAX_QUEUE=200
PRICE_CHANGE_THRESHOLD=0.02
PRICE_WATCH_INTERVAL_MS=30000
NEWS_WATCH_INTERVAL_MS=60000
TIME_WATCH_INTERVAL_MS=300000

# Cooldowns after analysis (ms)
COOLDOWN_SIGNAL_FOUND_MS=300000
COOLDOWN_NEWS_NO_SIGNAL_MS=1800000
COOLDOWN_NO_NEWS_MS=7200000
COOLDOWN_ERROR_MS=120000

# Rate limiting for /api/analyze
MAX_CONCURRENT_ANALYSES=3
MAX_ANALYSES_PER_MINUTE=5
