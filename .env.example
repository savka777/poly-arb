# Vertex AI (Google Cloud) — for Claude access
GOOGLE_CLOUD_PROJECT=gen-lang-client-0494134627
VERTEX_REGION=us-east5

# External APIs
VALYU_API_KEY=

# Polling + scanning
NEXT_PUBLIC_POLL_INTERVAL_MS=15000
CYCLE_INTERVAL_MS=60000

# Signal threshold (lower = more signals, higher = only strong alpha)
EV_THRESHOLD=0.02

# Scanner tuning
SCANNER_CONCURRENCY=5
SCANNER_MARKETS_PER_CYCLE=50
SCANNER_SIGNAL_TTL_MS=600000

# Mock data (set to "true" for demo/testing without live APIs)
USE_MOCK_DATA=false

# Market filters — controls which markets the scanner targets
MARKET_MIN_LIQUIDITY=0
MARKET_MIN_VOLUME=0
MARKET_MIN_PROBABILITY=0.05
MARKET_MAX_PROBABILITY=0.95

# Strategies — comma-separated list of enabled strategies
ENABLED_STRATEGIES=ev
